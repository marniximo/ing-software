<Window x:Class="TiendaIngSoft.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiendaIngSoft"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Label x:Name="label" Content="Log in" HorizontalAlignment="Center" Margin="0,56,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_1" Content="Legajo" HorizontalAlignment="Left" Margin="135,107,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_2" Content="Contraseña" HorizontalAlignment="Left" Margin="135,138,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_legajo" HorizontalAlignment="Left" Margin="250,111,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
        <PasswordBox x:Name="txt_password" HorizontalAlignment="Left" Margin="250,142,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_login" Content="Log in" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Click="btn_login_Click"/>

    </Grid>
</Window>
